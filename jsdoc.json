{
    "opts": {
        "template": "node_modules/better-docs",
        "destination": "./docs/",
        "readme": "./README.md"
    },
    "templates": {
        "better-docs": {
            "name": "Republican Calendar",
            "navigation": [{
                "label": "Github",
                "href": "https://github.com/MatthewMaginniss/French-Republican-Calendar"
            }]
        },
        "search": true
    },
    "tags": {
        "allowUnknownTags": ["category"]
    },
    "plugins": [
        "node_modules/better-docs/typescript",
        "node_modules/better-docs/category"
    ],
    "source": {
        "include": ["src/"],
        "includePattern": "\\.(jsx|js|ts|tsx)$"
    }
}